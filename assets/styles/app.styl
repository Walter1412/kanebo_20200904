@import url('//fonts.googleapis.com/css?family=Montserrat:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i')
@import url('//fonts.googleapis.com/earlyaccess/notosanstc.css')
@import url('//fonts.googleapis.com/css?family=Source+Sans+Pro')
@import '_base.styl'
@import '_reboot.styl'
// @import '_fonts.styl'
@import '_transition.styl'

:root
  --primary #1976D2
  --secondary #424242
  --accent #82B1FF
  --error #FF5252
  --info #2196F3
  --success #4CAF50
  --warning #FFC107

.swiper-container
  width 100%
  padding-bottom width1920(150)
  background-repeat no-repeat
  background-size contain
  +RWD-below($tablet)
    padding-bottom width768(100)

.swiper-slide
  width 100%
  padding-left width1920(115)
  padding-right width1920(115)
  +RWD-below($tablet)
    padding 0

.swiper-button-prev
  background-image url('~assets/images/project/desktop/pagination/left.png')
  width width1920(51)
  height 10%
  background-size contain
  background-repeat no-repeat
  background-position center center
  +RWD-below($tablet)
    width 50px
    height 40px

  &:after
    content ''

.swiper-button-next
  background-image url('~assets/images/project/desktop/pagination/right.png')
  width width1920(51)
  height 10%
  background-size contain
  background-repeat no-repeat
  background-position center center
  +RWD-below($tablet)
    width 50px
    height 40px

  &:after
    content ''

.swiper-pagination-bullet
  width 15px
  height 15px
      
  +RWD-below($tablet)
    width 11px
    height 11px
  // +RWD-below($mobile)
  //   width 11px
  //   height 11px


.swiper-pagination-bullet-active
  background-color #707070

.swiper-container-horizontal > .swiper-pagination-bullets .swiper-pagination-bullet
  margin 0 10px
  +RWD-below($tablet)
    margin 0 5px
  // +RWD-below($mobile)
  //   margin 0 5px

.swiper-pagination
  width 100%
  bottom 5%

.more
  width width1920(200)
  display inline-block
  position absolute
  +RWD-below($tablet)
    width width768(109)
  img
    width 100%
